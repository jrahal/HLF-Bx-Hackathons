namespace org.deloitte.net

// ******************** PARTICIPANTS ***********************

participant Employee identified by employeeID{
  o String employeeID
  o String firstName
  o String lastName
  o String position
  o Double salary
  --> Account acc
}

participant Company identified by companyID {
  o String companyName
  o String companyID
  o String[] employees
  o String location
  o String description
  o String ceo
  o String[] subsidiaries
  --> Account acc
}

// ******************** ACCOUNTS ***********************

enum Owner{
  o Company
  o Employee
}

asset Account identified by AccountID {
  o String AccountID //Account ID: 'a' + companyID
  o Owner owner
  o String ownerID
  o Double balanceBTC
  o Double balanceETH
  o Double balanceUSD
  o Double balanceCAD
  o Double balanceGBP
}


// ********************TRANSACTIONS ***********************

transaction btcTransaction {
  --> Account from
  --> Account to
  o Double amount
  o String transactionID
  o String date
  o String description
}

transaction ethTransaction {
  --> Account from
  --> Account to
  o Double amount
  o String transactionID
  o String date
  o String description
}

transaction usdTransaction {
  --> Account from
